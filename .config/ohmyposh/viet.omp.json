{
    "Created": "Phunt_Vieg_",
    "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
    "blocks": [
        {
            "type": "prompt",
            "alignment": "left",
            "newline": true,
            "segments": [
                {
                    "foreground": "lightWhite",
                    "style": "plain",
                    "template": "\u256d\u2500",
                    "type": "text"
                },
                {
                    "background": "yellow",
                    "foreground": "black",
                    "leading_diamond": "\ue0b6",
                    "style": "diamond",
                    "template": " {{ .UserName }} ",
                    "trailing_diamond": "\ue0b0",
                    "type": "session"
                },
                {
                    "background": "blue",
                    "foreground": "black",
                    "properties": {
                        "style": "full"
                    },
                    "style": "diamond",
                    "template": " \uf114  {{ .Path }} ",
                    "trailing_diamond": "\ue0b0",
                    "type": "path"
                },
                {
                    "background": "magenta",
                    "foreground": "black",
                    "properties": {
                        "branch_icon": "",
                        "fetch_stash_count": true,
                        "fetch_status": false,
                        "fetch_upstream_icon": true
                    },
                    "style": "diamond",
                    "template": " \ue725({{ .UpstreamIcon }} {{ .HEAD }}{{ if gt .StashCount 0 }} \ueb4b {{ .StashCount }}{{ end }}) ",
                    "trailing_diamond": "\ue0b0",
                    "type": "git"
                },
                {
                    "background": "magenta",
                    "foreground": "black",
                    "properties": {
                        "time_format": "15:04"
                    },
                    "style": "diamond",
                    "template": "{{ if ne (.Segments.Contains \"Git\") true }} \u2665  {{ .CurrentDate | date .Format }} {{ end }}",
                    "trailing_diamond": "\ue0b0",
                    "type": "time"
                }
            ]
        },
        {
            "type": "prompt",
            "alignment": "left",
            "newline": true,
            "segments": [
                {
                    "foreground": "lightWhite",
                    "style": "plain",
                    "template": "\u2570\u2500<green>\u26a1</>",
                    "type": "text"
                }
            ]
        }
    ],
    "transient_prompt": {
        "template": "<red>\uf489 </><blue>\uf0da</><magenta>\uf105</> "
    },
    "final_space": true,
    "version": 6
}
